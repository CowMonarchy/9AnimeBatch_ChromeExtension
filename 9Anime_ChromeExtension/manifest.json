{
    "manifest_version": 2,


    "name": "9Anime Batch Downloader",
    "version": "1.0",
    "author": "OST",
    "description": "Batch downloader for site : https://www12.9anime.ru/\n\n\n",



    "permissions": ["activeTab", "<all_urls>", "declarativeContent", "downloads", "storage", "tabs"],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js; object-src 'self'",



    "icons": {
        "16": "images/9Anime_Batch16.png",
        "32": "images/9Anime_Batch32.png",
        "48": "images/9Anime_Batch48.png",
        "128": "images/9Anime_Batch128.png"
    },


    "background": {
        "scripts": ["scripts/background.js", "frameworks/jquery-3.5.1.min.js", "scripts/popup.js"],
        "persistent": false
    },


    "page_action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "images/9Anime_Batch16.png",
            "32": "images/9Anime_Batch32.png",
            "48": "images/9Anime_Batch48.png",
            "128": "images/9Anime_Batch128.png"
        }
    }
}