{
    "manifest_version": 2,


    "name": "GoGo Downloader",
    "version": "1.0",
    "author": "OST",
    "description": "Batch downloader for site : https://www2.gogoanime.video/\n\n\n",



    "permissions": ["activeTab", "<all_urls>", "declarativeContent", "downloads", "storage", "tabs"],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js; object-src 'self'",



    "icons": {
        "16": "images/GoGo_Logo16.png",
        "32": "images/GoGo_Logo32.png",
        "48": "images/GoGo_Logo48.png",
        "128": "images/GoGo_Logo128.png"
    },




    "background": {
        "scripts": ["scripts/background.js", "frameworks/jquery-3.5.1.min.js", "scripts/copyDOM.js", "scripts/popup.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["https://gogoanime.vc/*-episode-*"],
        "run_at": "document_start",
        "js": ["frameworks/jquery-3.5.1.min.js", "scripts/copyDOM.js"]
    }],



    "page_action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "images/GoGo_Logo16.png",
            "32": "images/GoGo_Logo32.png",
            "48": "images/GoGo_Logo48.png",
            "128": "images/GoGo_Logo128.png"
        }
    }
}